@*@model Divuvina.Business.Transporter*@
@{
    ViewBag.Title = "Bảo trì sửa chữa xe";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Bảo trì sửa chữa xe</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <form class="form-horizontal m-t-md" id="formData" role="form">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title"><h3>Phần thông tin</h3></div>
                    <div class="ibox-content">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Số xe:</label>
                            <div class="col-md-4">
                                <select class="form-control" id="SoXeKey"></select>
                                @*@Html.TextBoxFor(m => m.XeAlternateKey, new { id = "SoXeKey" })*@
                                <span />
                            </div>

                            <div class="col-md-2">
                                <button type="button" class="btn btn-w-m btn-success" id="btGedtLbt" onclick="onLbtClick()"><i class="fa fa-search" aria-hidden="true"></i> Lấy lịch sửa chữa bảo trì</button>
                                <span />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title"><h3>Lịch sửa chữa bảo trì</h3></div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table id="dtLbt" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="50" align="center" valign="middle">Thứ tự</th>
                                        <th></th>
                                        <th>Số xe</th>
                                        <th>Số sàn</th>
                                        <th>Ngày sắp lịch</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title"><h3>Chi tiết thiết bị linh kiện</h3></div>
                    <div class="ibox-content">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title"><h3>Nhập thiết bị linh kiện</h3></div>
                            <div class="ibox-content">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Thiết bị linh kiện:</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" id="TblkKey"></select>
                                        <span />
                                    </div>

                                    <label class="col-sm-2 control-label">Số lượng:</label>
                                    <div class="col-sm-4">
                                        <input type="text" id="SoLuong" class="form-control" placeholder="Nhập số lượng">
                                        <span />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Tổng tiền:</label>
                                    <div class="col-sm-4">
                                        <input type="text" id="TongTien" class="form-control" placeholder="Nhập tổng tiền">
                                        <span />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2">
                                        <button type="button" class="btn btn-w-m btn-success" id="btAddTblk" onclick="onLbtctAddClick()"><i class="fa fa-file" aria-hidden="true"></i> Thêm mới thiết bị linh kiện</button>
                                        <span />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table id="dtTblk" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="50" align="center" valign="middle">Thứ tự</th>
                                        <th></th>
                                        <th>Tên thiết bị linh kiện</th>
                                        <th>Số lượng</th>
                                        <th>Tổng tiền</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                @*<tfoot>
                                </tfoot>*@
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    @Styles.Render("~/plugins/awesomeCheckboxStyles")
    @Styles.Render("~/plugins/clockpickerStyles")
    @Styles.Render("~/plugins/dateRangeStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
    @Styles.Render("~/plugins/switcheryStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/nouiSliderStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/Content/plugins/ionRangeSlider/ionRangeStyles")
    @Styles.Render("~/plugins/imagecropperStyles")
    @Styles.Render("~/Content/plugins/colorpicker/colorpickerStyles")
    @Styles.Render("~/plugins/select2Styles")
    @Styles.Render("~/plugins/touchSpinStyles")
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")

    <link href="~/Content/Divuvina/DivuvinaTable.css" rel="stylesheet" />
}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/ionRange")
    @Scripts.Render("~/plugins/nouiSlider")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/knob")
    @Scripts.Render("~/plugins/imagecropper")
    @Scripts.Render("~/plugins/colorpicker")
    @Scripts.Render("~/plugins/clockpicker")
    @Scripts.Render("~/plugins/dateRange")
    @Scripts.Render("~/plugins/select2")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/jeditable")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/sweetAlert")

    <script type="text/javascript">
        var _XeKey = "-1";
        var _LscbtKey = "-1";
        $(document).ready(function () {
            //Load dữ liệu cho Combobox Xe
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetDanhMucXe", "QuanLyXe")',
                contentType: "application/json; charset=utf-8",
                dataType: "JSON",
                success: function (response) {
                    $("#SoXeKey").select2({
                        data: response
                        , placeholder: "Chọn số xe"
                        , allowClear: true
                    });
                    $("#SoXeKey").val(null).trigger("change");
                    //$("#SoXeKey").on("change", function (e) {
                    //});
                },
                failure: function (msg) {
                }
            });


            var dtLbt = $('#dtLbt').DataTable({
                ajax: {
                    url: '@Url.Action("GetLichBaoTri", "QuanLyXe")'
                    , dataSrc: ''
                }
                , columns: [
                    {
                        data: null,
                        searchable: false
                        , orderable: false
                        , targets: 0
                        , className: "ColumnCenterClassName"
                    },
                    { data: 'Key', visible: false },
                    { data: 'BangSoXe' },
                    { data: 'SoSan' },
                    { data: 'NgaySapLich' }
                ]
                , order: [2, 'asc']
                , language: {
                    lengthMenu: 'Hiển thị _MENU_ dòng mỗi trang'
                    , emptyTable: 'Không có dữ liệu'
                    , info: 'Hiển thị dòng _START_ đến dòng _END_ trên tổng số _TOTAL_ dòng'
                    , infoEmpty: 'Hiển thị dòng _START_ đến dòng _END_ trên tổng số _TOTAL_ dòng'
                    , search: 'Tìm kiếm'
                    , paginate: {
                        first: "Trang đầu",
                        last: "Trang cuối",
                        next: "Sau",
                        previous: "Trước"
                    }
                }
                //, lengthMenu: [[5,10, 25, 50, -1], [5,10, 25, 50, "All"]]
            });

            dtLbt.on('order.dt search.dt', function () {
                dtLbt.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

            $('#dtLbt tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');

                    dtLbtRowDeSelected()
                }
                else {
                    dtLbt.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');

                    dtLbtRowSelected();
                }
            });

            var dtTblk = $('#dtTblk').DataTable({
                ajax: {
                    url: '@Url.Action("GetLichBaoTriChiTiet", "QuanLyXe")'
                    , dataSrc: ''
                }
                , columns: [
                    {
                        data: null,
                        searchable: false
                        , orderable: false
                        , targets: 0
                        , className: "ColumnCenterClassName"
                    },
                    { data: 'Key', visible: false },
                    { data: 'Ten' },
                    { data: 'SoLuong' },
                    { data: 'TongTien' }
                ]
                , order: [2, 'asc']
                , language: {
                    lengthMenu: 'Hiển thị _MENU_ dòng mỗi trang'
                    , emptyTable: 'Không có dữ liệu'
                    , info: 'Hiển thị dòng _START_ đến dòng _END_ trên tổng số _TOTAL_ dòng'
                    , infoEmpty: 'Hiển thị dòng _START_ đến dòng _END_ trên tổng số _TOTAL_ dòng'
                    , search: 'Tìm kiếm'
                    , paginate: {
                        first: "Trang đầu",
                        last: "Trang cuối",
                        next: "Sau",
                        previous: "Trước"
                    }
                }
            });

            dtTblk.on('order.dt search.dt', function () {
                dtTblk.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

            $('#dtTblk tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    dtTblk.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });

            //Load dữ liệu cho Thiết bị, linh kiện
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetThietBiLinhKien", "QuanLyXe")',
                contentType: "application/json; charset=utf-8",
                dataType: "JSON",
                success: function (response) {
                    $("#TblkKey").select2({
                        data: response
                        , placeholder: "Chọn thiết bị linh kiện"
                        , allowClear: true
                    });
                    $("#TblkKey").val(null).trigger("change");
                },
                failure: function (msg) {
                }
            });
        });

        function onLbtClick() {
            _XeKey = $('#SoXeKey').val();
            $('#dtLbt').DataTable().ajax.url('@Url.Action("GetLichBaoTri", "QuanLyXe")' + '?XeKey=' + _XeKey).load();
        }

        function dtLbtRowSelected() {
            var row = $('#dtLbt').DataTable().data()[$('#dtLbt').DataTable().row('.selected')[0][0]];
            _LscbtKey = row.Key;

            $('#dtTblk').DataTable().ajax.url('@Url.Action("GetLichBaoTriChiTiet", "QuanLyXe")' + '?LbtctKey=' + _LscbtKey).load();
        }
        function dtLbtRowDeSelected() {
            _LscbtKey = "-1";
            $('#dtTblk').DataTable().ajax.url('@Url.Action("GetLichBaoTriChiTiet", "QuanLyXe")' + '?LbtctKey=' + _LscbtKey).load();
        }

        function onLbtctAddClick() {
            if (_XeKey == "-1" || _LscbtKey == "-1" || $('#SoLuong').val() == "" || $('#TongTien').val() == "") {
                toastr.error("Vui lòng nhập đủ thông tin !", "Thông báo !");
                return;
            }

            swal({
                title: "Bạn muốn lưu dữ liệu ?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#1c84c6",
                confirmButtonText: "Có !",
                cancelButtonText: "Không !"
            },
                function (isConfirm) {
                    if (isConfirm) {
                        if ($('#Key').val() == "")
                            $('#Key').val(-1);

                        $('#waitModal').modal('show');

                        //Load dữ liệu cho Thiết bị, linh kiện
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("AddLbtscct", "QuanLyXe")',
                            contentType: "application/json; charset=utf-8",
                            dataType: "JSON",
                            data: "{ \"LscbtKey\" : \"" + _LscbtKey
                                            + "\",\"TblkKey\" : \"" + $('#TblkKey').val()
                                            + "\",\"SoLuong\" : \"" + $('#SoLuong').val()
                                            + "\",\"TongTien\" : \"" + $('#TongTien').val()
                                            + "\" }",
                            success: function (response) {
                                $('#dtTblk').DataTable().ajax.url('@Url.Action("GetLichBaoTriChiTiet", "QuanLyXe")' + '?LbtctKey=' + _LscbtKey).load();

                                $('#waitModal').modal('hide');
                                ShowMessage(response);
                            },
                            failure: function (msg) {
                                $('#waitModal').modal('hide');
                            }
                        });
                    } else {
                        //alert("cancel");
                    }
                });
        }

    </script>

}
