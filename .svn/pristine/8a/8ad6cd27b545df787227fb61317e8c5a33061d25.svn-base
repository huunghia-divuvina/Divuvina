@{
    ViewBag.Title = "DanhMucLoaiHopDong";
}

@*<div id="page-wrapper" class="gray-bg">
    <div class="row border-bottom">
    </div>
</div>*@

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Danh mục loại hợp đồng</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <form class="form-horizontal m-t-md" action="#">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">                        
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên loại hợp đồng:</label>
                            <div class="col-sm-4">
                                <input type="text" id="Ten" class="form-control" placeholder="Nhập tên loại hợp đồng">
                                <span />
                            </div>

                            <label class="col-sm-2 control-label">Diễn giải:</label>
                            <div class="col-sm-4">
                                <input type="text" id="DienGiai" class="form-control" placeholder="Nhập diễn giải">
                                <span />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Ghi chú:</label>
                            <div class="col-sm-10">
                                <input type="text" id="GhiChu" class="form-control" placeholder="Nhập ghi chú">
                                <span />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-2 col-md-offset-2">
                                <button type="button" class="btn btn-w-m btn-success" id="btNew" onclick="onNewClick()">Tạo mới</button>
                                <span />
                            </div>

                            <div class="col-sm-2">
                                <button type="button" class="btn btn-w-m btn-success" id="btSave" onclick="onSaveClick()">Lưu</button>
                                <span />
                            </div>
                        </div>

                        <table id="dtSource" class="table table-striped table-bordered table-hover">
                        @*<table id="dtSource" class="table table-bordered">*@
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Tên loại hợp đồng</th>
                                    <th>Diễn giải</th>
                                    <th>Ghi chú</th>
                                    <th width="30"></th>
                                    <th width="30"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            @*<tfoot>
                                <tr>
                                    <th>Tên loại hợp đồng</th>
                                    <th>Diễn giải</th>
                                    <th>Ghi chú</th>
                                </tr>
                            </tfoot>*@
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style type="text/css">
    tr.selected {
        background-color: greenyellow !important;
    }
</style>

@section Styles {
    @Styles.Render("~/plugins/awesomeCheckboxStyles")
    @Styles.Render("~/plugins/clockpickerStyles")
    @Styles.Render("~/plugins/dateRangeStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
    @Styles.Render("~/plugins/switcheryStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/nouiSliderStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/Content/plugins/ionRangeSlider/ionRangeStyles")
    @Styles.Render("~/plugins/imagecropperStyles")
    @Styles.Render("~/Content/plugins/colorpicker/colorpickerStyles")
    @Styles.Render("~/plugins/select2Styles")
    @Styles.Render("~/plugins/touchSpinStyles")
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/ionRange")
    @Scripts.Render("~/plugins/nouiSlider")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/knob")
    @Scripts.Render("~/plugins/imagecropper")
    @Scripts.Render("~/plugins/colorpicker")
    @Scripts.Render("~/plugins/clockpicker")
    @Scripts.Render("~/plugins/dateRange")
    @Scripts.Render("~/plugins/select2")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/jeditable")
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        var index = -1;

        $(document).ready(function () {
            var table = $('#dtSource').DataTable({
                ajax: {
                    url: '@Url.Action("GetDataDanhMucLoaiHopDong", "QuanLyNhanVien")'
                    , dataSrc: ''
                }
                , columns: [
                    { data: 'Key', visible: false },
                    { data: 'Ten' },
                    { data: 'DienGiai' },
                    { data: 'GhiChu' },
                    {
                        data: null,
                        defaultContent: '<a href="#" class="edit">Sửa</a>',
                        orderable: false
                    }
                    , {
                        data: null,
                        defaultContent: '<a class="delete">Xóa</a>',
                        orderable: false
                    }
                ]
            });

            //var table = $('#dtSource').DataTable({
            //    data: [{ "Ten": "Tên hợp đồng 1", "DienGiai": "Diễn giải 1", "GhiChu": "Ghi chú 1" }, { "Ten": "Tên hợp đồng 10", "DienGiai": "Diễn giải 10", "GhiChu": "Ghi chú 10" }, { "Ten": "Tên hợp đồng 11", "DienGiai": "Diễn giải 11", "GhiChu": "Ghi chú 11" }, { "Ten": "Tên hợp đồng 12", "DienGiai": "Diễn giải 12", "GhiChu": "Ghi chú 12" }, { "Ten": "Tên hợp đồng 13", "DienGiai": "Diễn giải 13", "GhiChu": "Ghi chú 13" }, { "Ten": "Tên hợp đồng 14", "DienGiai": "Diễn giải 14", "GhiChu": "Ghi chú 14" }, { "Ten": "Tên hợp đồng 15", "DienGiai": "Diễn giải 15", "GhiChu": "Ghi chú 15" }, { "Ten": "Tên hợp đồng 16", "DienGiai": "Diễn giải 16", "GhiChu": "Ghi chú 16" }, { "Ten": "Tên hợp đồng 17", "DienGiai": "Diễn giải 17", "GhiChu": "Ghi chú 17" }, { "Ten": "Tên hợp đồng 18", "DienGiai": "Diễn giải 18", "GhiChu": "Ghi chú 18" }, { "Ten": "Tên hợp đồng 19", "DienGiai": "Diễn giải 19", "GhiChu": "Ghi chú 19" }, { "Ten": "Tên hợp đồng 2", "DienGiai": "Diễn giải 2", "GhiChu": "Ghi chú 2" }, { "Ten": "Tên hợp đồng 20", "DienGiai": "Diễn giải 20", "GhiChu": "Ghi chú 20" }, { "Ten": "Tên hợp đồng 21", "DienGiai": "Diễn giải 21", "GhiChu": "Ghi chú 21" }, { "Ten": "Tên hợp đồng 22", "DienGiai": "Diễn giải 22", "GhiChu": "Ghi chú 22" }, { "Ten": "Tên hợp đồng 23", "DienGiai": "Diễn giải 23", "GhiChu": "Ghi chú 23" }, { "Ten": "Tên hợp đồng 24", "DienGiai": "Diễn giải 24", "GhiChu": "Ghi chú 24" }]
            //    , select: true
            //    , columns: [
            //        { data: 'Ten' },
            //        { data: 'DienGiai' },
            //        { data: 'GhiChu' },
            //        {
            //            data: null,
            //            defaultContent: '<a href="#" class="edit">Sửa</a>',
            //            orderable: false
            //        }
            //        , {
            //            data: null,
            //            defaultContent: '<a class="delete">Xóa</a>',
            //            orderable: false
            //            , visible: false
            //        }
            //    ]
            //});

            $('#dtSource tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });

            $('#dtSource').on('click', 'a.edit', function (e) {
                var row = $('#dtSource').DataTable().data()[$('#dtSource').DataTable().row('.selected')[0][0]];
                index = row.Key;
                $('#Ten').val(row.Ten);
                $('#DienGiai').val(row.DienGiai);
                $('#GhiChu').val(row.GhiChu);
            });

            $('#dtSource').on('click', 'a.delete', function (e) {
                var row = $('#dtSource').DataTable().data()[$('#dtSource').DataTable().row('.selected')[0][0]];
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteDanhMucLoaiHopDong", "QuanLyNhanVien")',
                    data: "{ \"Key\" : \"" + row.Key + "\" }",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (response) {
                        $('#dtSource').DataTable().ajax.reload();
                    },
                    failure: function (msg) {
                        $('#output').text(msg);
                    }
                });
            });
        });

        function onNewClick() {
            index = -1;
            $('#Ten').val("");
            $('#DienGiai').val("");
            $('#GhiChu').val("");
        }

        function onSaveClick() {
        }
    </script>

}
