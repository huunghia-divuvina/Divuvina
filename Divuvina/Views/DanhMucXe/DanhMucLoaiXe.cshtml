@model Divuvina.Models.LoaiXe

@{
    ViewBag.Title = "DanhMucLoaiXe";
}
@*==============================================*@
@section Styles {

    @*-- BEGIN PAGE LEVEL PLUGINS--*@
    @Styles.Render("~/assets/global/css/components.min.css")
    @Styles.Render("~/assets/global/css/plugins.min.css")
    @Styles.Render("~/assets/global/plugins/bootstrap-touchspin/bootstrap.touchspin.css")
    @*-- END PAGE LEVEL PLUGINS--*@
}
<div class="row border-bottom white-bg page-heading">
    <div class="col-md-12 col-sm-12">
        <h2>Danh mục loại xe</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <form class="form-horizontal m-t-md" id="formData" role="form">
        <input type="hidden" id="Key" name="Key" value="@(Model.LoaiXeKey)" />
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="form-group border-bottom-dot-line" id="pIn">
                    <label class="col-sm-2 control-label no-padding-right">Hãng sản xuất:</label>
                    <div class="col-sm-4">
                        <div class="input-group select2-bootstrap-prepend" style="width:100%">
                            <select id="HangSanXuatXeKey" class="form-control select2-allow-clear" name="HangSanXuatXeKey" data-error-msg="Vui lòng chọn hãng sản xuất xe." autofocus>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <label class="col-sm-2 control-label no-padding-right">Tên loại xe:</label>
                    <div class="col-sm-4">
                        <div class="input-icon right">
                            <i class="fa fa-th font-green"></i>
                            <input type="text" id="Ten" name="Ten" class="form-control" placeholder="Nhập tên loại xe" value="@(Model.Ten)">
                        </div>
                        @*<span />*@
                    </div>
                </div>

                <div class="form-group border-bottom-dot-line">
                    <label class="col-sm-2 control-label no-padding-right">Mô tả:</label>
                    <div class="col-sm-4">
                        <div class="input-icon right">
                            <i class="fa fa-th font-green"></i>
                            <input type="text" id="MoTa" name="MoTa" class="form-control" placeholder="Nhập mô tả loại xe" value="@(Model.MoTa)">
                        </div>
                        @*@Html.TextBoxFor(r => r.MoTa, new { @class = "form-control", @placeholder = "Nhập mô tả loại xe" })
                        <span />*@
                    </div>
                    <label class="col-sm-2 control-label no-padding-right">Model:</label>
                    <div class="col-sm-4">
                        <div class="input-icon right">
                            <i class="fa fa-th font-green"></i>
                            <input type="text" id="Model" name="Model" class="form-control" placeholder="Nhập Model xe" value="@(Model.Model)">
                        </div>
                        @*@Html.TextBoxFor(r => r.Model, new { @class = "form-control", @placeholder = "Nhập Model xe" })
                        <span />*@
                    </div>
                </div>

                <div class="form-group border-bottom-dot-line">
                    <label class="col-sm-2 control-label no-padding-right">Máy chạy xăng:</label>
                    @*<label class="col-sm-2 control-label no-padding-right">&nbsp;</label>*@
                    <div class="col-sm-4">
                        <div class="md-radio has-info" style="padding-left:15px !important;">
                            <input type="radio" name="LoaiDongCo" id="MayChayXang" value="@(Model.MayChayXang)" class="md-radiobtn" checked>
                            <label for="MayChayXang">
                                <span></span>
                                <span class="check"></span>
                                <span class="box"></span> @*Máy chạy xăng*@
                            </label>
                        </div>
                    </div>
                    <label class="col-sm-2 control-label no-padding-right">Máy chạy dầu:</label>
                    <div class="col-sm-4">
                        <div class="md-radio has-success" style="padding-left:15px !important;">
                            <input type="radio" name="LoaiDongCo" id="MayChayDau" value="@(Model.MayChayDau)" class="md-radiobtn">
                            <label for="MayChayDau">
                                <span></span>
                                <span class="check"></span>
                                <span class="box"></span> @*Máy chạy dầu*@
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group border-bottom-dot-line">
                    <label class="col-sm-2 control-label no-padding-right">Tổng số ghế:</label>
                    <div class="col-sm-4">
                        <input class="touchspin3" id="SoGhe" name="SoGhe" type="text" required>
                        <span />
                    </div>
                    <label class="col-sm-2 control-label no-padding-right">Loại ghế:</label>
                    <div class="col-sm-4">
                        <div class="input-group select2-bootstrap-prepend" style="width:100%">
                            <select id="LoaiGheKey" class="form-control select2-allow-clear" name="LoaiGheKey" data-error-msg="Vui lòng chọn loại ghế của xe." autofocus>
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">Ghi chú:</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(r => r.GhiChu, new { @class = "form-control", @rows = 3, @placeholder = "Nhập ghi chú" })
                        <span />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 col-md-offset-2">
                        <button type="button" class="btn btn-w-m btn-primary" id="btNew" onclick="onNewClick()"><i class="fa fa-file" aria-hidden="true"></i> Tạo mới</button>
                        <span />
                    </div>

                    <div class="col-sm-2">
                        <button type="button" class="btn btn-w-m btn-danger" id="btSave" onclick="onSaveClick()"><i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu</button>
                        <span />
                    </div>
                </div>
            </div>
        </div>@*End Row*@

        <div class="row">
            @*-- BEGIN SEARCH INFO--*@
            <div class="col-md-12 col-sm-12">
                <div class="portlet box green">
                    @* Begin TITLE *@
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-pagelines"></i>
                            Danh mục loại xe
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse" data-original-title title=""></a>
                        </div>
                    </div>
                    @* End TITLE *@

                    @* Begin CONTENT *@
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table id="dtSource" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="30px"></th>
                                        <th width="1px"></th>
                                        <th>Tên loại xe</th>
                                        <th>Mô tả</th>
                                        <th>Hãng sản xuất</th>
                                        <th>Model</th>
                                        <th>Máy chạy dầu</th>
                                        <th>Máy chạy xăng</th>
                                        <th>Số ghế</th>
                                        <th>Loại ghế</th>
                                        <th>Ghi chú</th>
                                        <th width="30px">Sửa</th>
                                        <th width="30px">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    @* End CONTENT *@
                </div>
            </div>
            @*-- END SEARCH INFO--*@
        </div>@*End Row*@
    </form>
</div>

