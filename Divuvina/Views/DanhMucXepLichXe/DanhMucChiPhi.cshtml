@model Divuvina.Models.DanhMucChiPhi

@{
    ViewBag.Title = "DanhMucChiPhi";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-md-12 col-sm-12">
        <h2>Danh mục chi phí</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <form class="form-horizontal m-t-md" id="formData" role="form">
        @Html.HiddenFor(model => model.DanhMucChiPhiKey, new { @id = "Key" })
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="form-group border-bottom-dot-line" id="pIn">
                    <label class="col-sm-2 control-label">Tên loại chi phí:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(r => r.DienGiai, new { @class = "form-control", @placeholder = "Nhập tên chi phí", @autofocus = true })
                        <span />
                    </div>
                </div>
                <div class="form-group border-bottom-dot-line" id="pIn">
                    <label class="col-sm-2 control-label">Ghi chú:</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(r => r.GhiChu, new { @class = "form-control", @rows = 3, @placeholder = "Nhập ghi chú" })
                        <span />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 col-md-offset-2">
                        <button type="button" class="btn btn-w-m btn-primary" id="btNew" onclick="onNewClick()"><i class="fa fa-file" aria-hidden="true"></i> Tạo mới</button>
                        <span />
                    </div>

                    <div class="col-sm-2">
                        <button type="button" class="btn btn-w-m btn-danger" id="btSave" onclick="onSaveClick()"><i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu</button>
                        <span />
                    </div>
                </div>
            </div>
        </div>@*End Row*@
        @*<div class="row">
            <div class="col-md-12 col-sm-12">
                
            </div>
        </div>*@
        <div class="row">
            @*-- BEGIN SEARCH INFO--*@
            <div class="col-md-12 col-sm-12">
                <div class="portlet box green">
                    @* Begin TITLE *@
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-pagelines"></i>
                            Danh mục chi phí
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse" data-original-title title=""></a>
                        </div>
                    </div>
                    @* End TITLE *@

                    @* Begin CONTENT *@
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table id="dtSource" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="30px"></th>
                                        <th width="1px"></th>
                                        <th>Loại chi phí</th>
                                        <th>Ghi chú</th>
                                        <th width="30px">Sửa</th>
                                        <th width="30px">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    @* End CONTENT *@
            </div>
        </div>
            @*-- END SEARCH INFO--*@
        </div>@*End Row*@
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/ionRange")
    @Scripts.Render("~/plugins/nouiSlider")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/knob")
    @Scripts.Render("~/plugins/imagecropper")
    @Scripts.Render("~/plugins/colorpicker")
    @Scripts.Render("~/plugins/clockpicker")
    @Scripts.Render("~/plugins/dateRange")
    @Scripts.Render("~/plugins/select2")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/jeditable")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/toastr")

    <!--Render script for Page-->
    @Scripts.Render("~/Scripts/DanhMucXepLichXe/DanhMucChiPhi.js")

}

